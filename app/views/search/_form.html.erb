<%= form_with(url: search_path, method: :get, class: 'd-flex') do |f| %>
  <%= f.search_field :search, placeholder: "Search by name...", class: "form-control me-2" %>
  <%= f.number_field :min_price, placeholder: "Min Price", class: "form-control me-2" %>
  <%= f.number_field :max_price, placeholder: "Max Price", class: "form-control me-2" %>
  <%= f.select :category_id, options_for_select(Category.all.collect { |c| [c.name, c.id] }, params[:category_id]), include_blank: "All Categories", class: "form-control me-2" %>
  <%= f.submit "Search!", class: "btn btn-outline-success" %>
<% end %>
