<div class="row mt-3 mx-3" >
  <div class="col-lg-12 category_show">
    <div class="row mt-3">
      <% @products.each do |product| %>
        <div class="card shadow me-1 mt-2" style="width: 17rem; height: 18rem; ">
          <div class="my-auto mx-auto mt-2 ">
            <% if product.cover_image.attached? %>
              <center><%= image_tag product.cover_image, height:170, width:110 %></center>
            <% end %>
            <div card="card-body">
                <center><strong class="card-title ms-3 mt-3"><%= product.name %></strong></center>
                <center><strong class="badge rounded-pill bg-dark ">Price: <%= product.price %></strong></center>
              <div>
                  <%= link_to "View Details", category_sub_category_product_path(product.sub_category.category_id, product.sub_category_id, product.id), class: "btn btn-outline-success mt-3" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>